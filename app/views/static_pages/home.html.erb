<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
     
    </aside>
   
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the Course Managment System</h1>

    <h2>
      This application allows you to register an account and view the list of courses and course offerings.
    </h2>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>

<% end %>